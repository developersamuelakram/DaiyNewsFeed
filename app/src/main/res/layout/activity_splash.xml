<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".Splash.Splash">

    <ImageView
        android:background="@drawable/feed"
        android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:id="@+id/newsfeedphoto"
        android:layout_marginBottom="50dp"
        android:layout_height="250dp"/>

    <TextView
        android:text="News Feed"
        android:textSize="35sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newsfeedphoto"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:id="@+id/newsFeedText"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="Eye On The News"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_bold"
        android:textStyle="italic"
        android:layout_below="@id/newsFeedText"
        android:layout_centerHorizontal="true"
        android:id="@+id/eyes"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="Developed by @samdroids"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_bold"
        android:layout_below="@id/eyes"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>